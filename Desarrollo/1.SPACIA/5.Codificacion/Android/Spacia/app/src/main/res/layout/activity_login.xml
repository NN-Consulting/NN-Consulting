<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/material_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ln_login"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingRight="32dp"
        android:gravity="center"
        android:background="@drawable/bg_login"
        android:paddingLeft="32dp"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_s"/>

        <EditText
            android:id="@+id/et_email_l"
            android:inputType="textEmailAddress"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/email"
            style="@style/ViewBoxText"
            android:hint="Email"
            android:drawableTint="@color/material_grey300"
            android:maxLength="60"
            android:padding="14dp" />

        <EditText
            android:id="@+id/et_password_l"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:hint="ContraseÃ±a"
            android:maxLength="16"
            android:drawableTint="@color/material_grey300"
            android:drawableLeft="@drawable/password"
            style="@style/ViewBoxText"
            android:padding="14dp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_response_l"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/material_red900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_radiusform"
            android:textColor="@color/material_white"
            android:textSize="@dimen/text_size_16"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/ralewayregular"
            android:text="@string/iniciar_sesion"/>

        <TextView
            android:id="@+id/txt_forgotpassword"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/material_white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ralewaysemibold"
            android:layout_height="30dp"
            android:text="@string/forgot_password"/>

    </LinearLayout>

</ScrollView>